#!/bin/sh

echo "🔍 Running pre-push checks..."

# Run lint check
echo "📝 Checking lint..."
pnpm run lint
if [ $? -ne 0 ]; then
  echo "❌ Lint check failed. Please fix errors before pushing."
  exit 1
fi

# Run format check
echo "🎨 Checking format..."
pnpm run format:check
if [ $? -ne 0 ]; then
  echo "❌ Format check failed. Run 'pnpm run format' to fix."
  exit 1
fi

# Run build
echo "🔨 Building project..."
pnpm run build
if [ $? -ne 0 ]; then
  echo "❌ Build failed. Please fix errors before pushing."
  exit 1
fi

echo "✅ All pre-push checks passed!"