#!/bin/sh

echo "ğŸ” Running pre-push checks..."

# Run lint check
echo "ğŸ“ Checking lint..."
pnpm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Lint check failed. Please fix errors before pushing."
  exit 1
fi

# Run format check
echo "ğŸ¨ Checking format..."
pnpm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Format check failed. Run 'pnpm run format' to fix."
  exit 1
fi

# Run build
echo "ğŸ”¨ Building project..."
pnpm run build
if [ $? -ne 0 ]; then
  echo "âŒ Build failed. Please fix errors before pushing."
  exit 1
fi

echo "âœ… All pre-push checks passed!"